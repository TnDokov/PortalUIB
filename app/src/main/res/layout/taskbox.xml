<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due date"
            android:textStyle="bold"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tanggaldeadline"
            android:text="Time : 16:00, 30 October 2021"
            android:layout_marginLeft="70dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="351dp"
        android:layout_height="120dp"
        android:background="@drawable/radiustablayout"
        android:padding="14dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sistem Basis Data"
            android:textStyle="bold"
            android:textSize="24dp"
            android:id="@+id/namakelas"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Project UTS"
            android:id="@+id/tujuantugas"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pembuatan ERD Mobile Apps"
            android:id="@+id/deskripsitugas"
            android:textSize="15dp"
            />

    </LinearLayout>



</LinearLayout>