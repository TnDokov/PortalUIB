<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home"
    android:background="#333333"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="40dp"
>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="130dp"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/jennie2" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="310dp"
            android:layout_height="130dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:cardCornerRadius="15dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="180dp"
                android:text="18 Okt 2021"
                android:textColor="#00bfa5"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Hi Louis !"
                android:textColor="#00bfa5"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/npm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:text="NPM : 2032017"
                android:textColor="#aeaeae"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/npm"
                android:text="Note : theres some task u need to do . . ."
                android:textColor="#aeaeae"
                android:textSize="13sp" />

        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="415dp"
        android:layout_height="590dp"
        android:background="@drawable/midradius"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/jumlahkelas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today Class ( 2 )"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See All"
                android:textColor="#aeaeae"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="190dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="451dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <RelativeLayout
                android:layout_width="95dp"
                android:layout_height="110dp"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/leftradius"
                android:elevation="2dp"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/waktu1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18:00"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/wib1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/waktu1"
                    android:text="Wib"
                    android:textSize="20sp"
                    android:textColor="#000"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/classjadwal1"
                android:layout_width="256dp"
                android:layout_height="110dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:cardCornerRadius="15dp"
                android:background="@drawable/rightradius"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/matkul1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Sistem Basis Data"
                    android:textColor="#00bfa5"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/kelas1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/matkul1"
                    android:text="Class : Online"
                    android:textColor="#aeaeae"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/namadosen1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kelas1"
                    android:text="Stefanus Eko Prasetyo, S.Kom., M.MSI."
                    android:textColor="#aeaeae"
                    android:textSize="13sp" />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="451dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp">

            <RelativeLayout
                android:layout_width="95dp"
                android:layout_height="110dp"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/leftradius"
                android:elevation="2dp"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/waktu2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20:00"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/wib2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/waktu2"
                    android:text="Wib"
                    android:textSize="20sp"
                    android:textColor="#000"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/classjadwal2"
                android:layout_width="256dp"
                android:layout_height="110dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:cardCornerRadius="15dp"
                android:background="@drawable/rightradius"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/matkul2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Mobile and Web Service"
                    android:textColor="#00bfa5"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/kelas2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/matkul2"
                    android:text="Class : Online"
                    android:textColor="#aeaeae"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/namadosen2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kelas2"
                    android:text="Syaeful Anas Aklani, S.Kom., M.Kom."
                    android:textColor="#aeaeae"
                    android:textSize="13sp" />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:id="@+id/jumlahtugas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Assignment"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See All"
                android:textColor="#aeaeae"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="190dp"
                />

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ft_rview"
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:layout_marginTop="15dp"
            />
    </LinearLayout>

</LinearLayout>

</FrameLayout>